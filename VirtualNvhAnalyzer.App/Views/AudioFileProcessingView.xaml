<UserControl x:Class="VirtualNvhAnalyzer.App.Views.AudioFileProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualNvhAnalyzer.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Filename:" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock Grid.Row="0" Grid.Column="1"
                       Text="{Binding FileDisplayName}" 
                       FontSize="16" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <Label Grid.Row="1" Grid.Column="0" Content="Channels:" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="{Binding AudioFileInfo.Channels}" 
                       FontSize="16" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Sample Rate:" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding AudioFileInfo.SampleRate}" 
                       FontSize="16" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Sample Rate:" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" />
            <TextBlock Grid.Row="3" Grid.Column="1"
                       Text="{Binding AudioFileInfo.Duration}" 
                       FontSize="16" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
        </Grid>

        <Button Grid.Row="3" Grid.Column="0" Content="Play" Command="{Binding Commands[AudioFilePlay]}"/>
        <Button Grid.Row="3" Content="Stop" Grid.Column="1" Command="{Binding Commands[AudioFileStop]}"/>
        <Button Grid.Row="3" Content="Pause" Grid.Column="2" Command="{Binding Commands[AudioFilePause]}"/>
    </Grid>
</UserControl>
